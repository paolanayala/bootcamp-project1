import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/flashcards")
public class FlashcardServlet extends HttpServlet {
    private static final long serialVersionUID = 1L;

    protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        // Set the content type to HTML
        response.setContentType("text/html");
        response.setCharacterEncoding("UTF-8");

        // Get the PrintWriter object to send data to the client
        PrintWriter out = response.getWriter();
        
        // HTML content with embedded CSS and JavaScript
        out.println("<html><head>");
        out.println("<meta charset='UTF-8'>");
        out.println("<title>Animal Flashcards</title>");
        out.println("<style>");
        out.println("body, h1, p { margin: 0; padding: 0; box-sizing: border-box; }");
        out.println(".flashcards-container { display: flex; flex-wrap: wrap; justify-content: center; gap: 20px; padding: 20px; background-color: #f5f5f5; }");
        out.println(".flashcard { width: 150px; height: 200px; perspective: 1000px; position: relative; }");
        out.println(".flashcard-front, .flashcard-back { width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; font-size: 2em; font-weight: bold; border: 1px solid #ddd; background-color: #fff; border-radius: 8px; transition: transform 0.6s; position: absolute; backface-visibility: hidden; }");
        out.println(".flashcard { position: relative; transform-style: preserve-3d; }");
        out.println(".flashcard:hover .flashcard-front { transform: rotateY(180deg); }");
        out.println(".flashcard:hover .flashcard-back { transform: rotateY(0deg); }");
        out.println(".flashcard-back { transform: rotateY(180deg); background-color: #e0f7fa; color: #00796b; }");
        out.println("</style>");
        out.println("</head><body>");
        out.println("<div class='flashcards-container'>");
        
        // Example animal flashcards data
        String[][] flashcards = {
            {"Lion", "Roar"},
            {"Cow", "Moo"},
            {"Dog", "Bark"},
            {"Cat", "Meow"},
            {"Duck", "Quack"},
            {"Sheep", "Baa"},
            {"Horse", "Neigh"},
            {"Pig", "Oink"},
            {"Elephant", "Trumpet"},
            {"Frog", "Ribbit"}
        };

        for (String[] card : flashcards) {
            out.println("<div class='flashcard'>");
            out.println("<div class='flashcard-front'>" + card[0] + "</div>");
            out.println("<div class='flashcard-back'>" + card[1] + "</div>");
            out.println("</div>");
        }

        out.println("</div>");
        out.println("</body></html>");
    }
}
